<h1>Listing subsections</h1>

<table>
  <thead>
    <tr>
      <th>Раздел</th>
      <th>Подраздел</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subsections.each do |subsection| %>
      <tr>
        <td><%= Section.find(subsection.section_id).name %></td>
        <td><%= subsection.name %></td>
        <td><%= link_to 'Show', subsection %></td>
        <td><%= link_to 'Edit', edit_subsection_path(subsection) %></td>
        <td><%= link_to 'Удалить', subsection_destroy_path(subsection) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subsection', new_subsection_path %>
